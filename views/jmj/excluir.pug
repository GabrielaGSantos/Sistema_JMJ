                    section
                        h3.major DADOS DA JMJ
                        form#excluir_jmj
                            .field
                                label(for="pais") País da JMJ
                                input(type="text", name="pais", value=pais, disabled=1)
                            .field
                                label(for="cidade") Cidade da JMJ
                                input(type="text", name="cidade", value=cidade,  disabled=1)                            
                            .field
                                label(for="ano") Ano da JMJ
                                input(type="text", name="ano", value=ano,  disabled=1)
                            .field
                                label(for="periodo") Periodo da JMJ
                                input(type="text", name="periodo", value=periodo,  disabled=1)
                            .field
                                label(for="lema") Lema da JMJ
                                input(type="text", name="lema", value=lema,  disabled=1)
                            .field                                
                                input#confirmar_deletar(type='checkbox', name='confirmar_deletar')
                                label(for='confirmar_deletar') Deseja Realmente Excluir?
                            ul.actions
                                li
                                    input#excluir(type="submit", value="Deletar JMJ", disabled=1, style="background: #FE514E; color: #ffffff")
