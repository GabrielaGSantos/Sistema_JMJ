            link(rel="stylesheet", href="/assets/css/ie9.css")
        noscript
            link(rel="stylesheet", href="/assets/css/noscript.css")
    body
        // Wrapper
        #wrapper
            include ../usuario.pug  
            br
            br

            #main           
                article.active
                    include ../menu.pug   
                    br
                    br
                    
                    section
                        h3.major Cadastro de JMJ
                        form(method="post", action="#")
                            .field.half.first
                                label(for="pais") País da JMJ
                                input#demo-name(type="text", name="pais", value="", placeholder="Exemplo: Polônia")
                            .field.half
                                label(for="cidade") Cidade da JMJ
                                input#demo-name(type="text", name="cidade", value="", placeholder="cidade")
                            .field
                                label(for="lema") Lema da JMJ
                                input#demo-name(type="text", name="lema", value="", placeholder="Lema")
                            .field
                                label(for="periodo") Periodo da JMJ
                                input#demo-name(type="text", name="periodo", value="", placeholder="Exemplo: 08/12/19 até 10/12/19")
                            .field
                                label(for="observacao") Observações
                                textarea#demo-message(name="observacao", placeholder="Anotações", rows="6")
                            ul.actions
                                li
                                    input.special(type="submit", value="Cadastrar JMJ")
                                li
                                    input(type="reset", value="Cancelar")
