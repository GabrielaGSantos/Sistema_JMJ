    body
        // Wrapper
        #wrapper
            include ../../usuario.pug  
            br
            br

            #main           
                article.active
                    include ../../menu.pug   
                    br
                    br
                    section
                        h3.major Cadastro de Paróquia
                        form(method="post", action="#").paroquia
                            .field
                                label(for="pais") Nome da Paróquia
                                input(type="text", name="pais", value="", placeholder="Exemplo: São Gonçalo")
                        h3.major Cadastro de Comunidades
                        form(method="post", action="#").comunidade
                            div#lista_comunidades
                                .field.half.first
                                    label(for="comunidade_1") Número da Comunidade
                                    input(type="text", name="comunidade_1", value="", placeholder="Exemplo: 1 ")
                                .field.half
                                    label(for="responsavel_1") Responsável da Comunidade
                                    input(type="text", name="responsavel_1", value="", placeholder="Exemplo: Luciano")
                            a.button.icon.fa-plus#adicionar_comunidade Comunidade
                            ul.actions
                                li
                                    input.special(type="submit", value="Cadastrar Paróquia")
                                li
                                    input(type="reset", value="Cancelar")
