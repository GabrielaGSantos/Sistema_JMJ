	head
		title Identity by HTML5 UP
		meta(charset="utf-8")
		meta(name="viewport", content="width=device-width, initial-scale=1")
		//if lte IE 8
			script(src="/assets/js/html5shiv.js")
		link(rel="stylesheet", href="/login/assets/css/main.css")
